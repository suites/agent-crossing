{
  "name": "agent-crossing",
  "private": true,
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter @agent-crossing/backend dev",
    "dev:simulation": "uv run --project packages/backend python packages/backend/src/run_two_agent_chat.py",
    "test:backend": "uv run --project packages/backend pytest -c packages/backend/pyproject.toml packages/backend/tests",
    "sync": "uv sync --project packages/backend",
    "build": "pnpm -r build",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  }
}
